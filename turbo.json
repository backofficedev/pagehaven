{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "server#dev": {
      "cache": false,
      "persistent": true
    },
    "server#dev:ready": {
      "cache": false,
      "persistent": false
    },
    "static#dev": {
      "dependsOn": ["server#dev:ready"],
      "cache": false,
      "persistent": true
    },
    "static#dev:ready": {
      "cache": false,
      "persistent": false
    },
    "web#dev": {
      "dependsOn": ["server#dev:ready"],
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["^deploy"],
      "cache": false,
      "env": [
        "STAGE",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_EMAIL",
        "SERVER_DOMAIN",
        "STATIC_DOMAIN",
        "WEB_DOMAIN",
        "BETTER_AUTH_SECRET",
        "APP_GITHUB_CLIENT_ID",
        "APP_GITHUB_CLIENT_SECRET",
        "PULL_REQUEST",
        "GITHUB_SHA",
        "GITHUB_REPOSITORY",
        "GITHUB_REPOSITORY_OWNER",
        "GITHUB_REPOSITORY_NAME",
        "GITHUB_TOKEN"
      ]
    },
    "server#destroy": {
      "dependsOn": ["web#destroy"],
      "cache": false,
      "env": [
        "STAGE",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_EMAIL",
        "SERVER_DOMAIN",
        "STATIC_DOMAIN",
        "WEB_DOMAIN",
        "BETTER_AUTH_SECRET",
        "APP_GITHUB_CLIENT_ID",
        "APP_GITHUB_CLIENT_SECRET",
        "PULL_REQUEST"
      ]
    },
    "static#destroy": {
      "dependsOn": ["web#destroy", "server#destroy"],
      "cache": false,
      "env": [
        "STAGE",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_EMAIL",
        "SERVER_DOMAIN",
        "STATIC_DOMAIN",
        "WEB_DOMAIN",
        "BETTER_AUTH_SECRET",
        "APP_GITHUB_CLIENT_ID",
        "APP_GITHUB_CLIENT_SECRET",
        "PULL_REQUEST"
      ]
    },
    "web#destroy": {
      "cache": false,
      "env": [
        "STAGE",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_EMAIL",
        "SERVER_DOMAIN",
        "STATIC_DOMAIN",
        "WEB_DOMAIN",
        "BETTER_AUTH_SECRET",
        "APP_GITHUB_CLIENT_ID",
        "APP_GITHUB_CLIENT_SECRET",
        "PULL_REQUEST"
      ]
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.spec.ts"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.spec.ts"],
      "outputs": ["coverage/**"]
    },
    "//#test:e2e": {
      "dependsOn": ["^build"],
      "inputs": [
        "e2e/**/*.ts",
        "playwright.config.ts",
        "apps/**/src/**",
        "packages/**/src/**"
      ],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "//#test:e2e:ui": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "//#cpd": {
      "inputs": ["**/*.{ts,tsx,js,jsx}", "jscpd.json"],
      "outputs": []
    },
    "//#sonar": {
      "inputs": ["apps/**", "packages/**", "sonar-project.properties"],
      "outputs": [],
      "cache": false
    }
  }
}

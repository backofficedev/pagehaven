{
  "name": "pagehaven",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@cloudflare/workers-types": "^4.20251211.0",
      "@orpc/client": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "@types/bun": "^1.3.4",
      "@types/node": "^24.10.3",
      "alchemy": "^0.81.1",
      "better-auth": "1.4.5",
      "chalk": "^5.6.2",
      "commander": "^14.0.2",
      "dotenv": "^17.2.3",
      "dotenv-expand": "^12.0.3",
      "drizzle-kit": "^0.31.8",
      "drizzle-orm": "^0.45.1",
      "glob": "^13.0.0",
      "hono": "^4.10.8",
      "ora": "^9.0.0",
      "tsdown": "^0.17.2",
      "typescript": "^5.9.3",
      "wrangler": "^4.54.0",
      "yaml": "^2.8.2",
      "zod": "^4.1.13"
    },
    "catalogs": {
      "testing": {
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@vitest/coverage-v8": "^4.0.15",
        "jsdom": "^27.3.0",
        "vitest": "^4.0.15"
      },
      "react": {
        "@types/react": "~19.2.7",
        "@types/react-dom": "^19.2.3",
        "@radix-ui/react-tabs": "^1.1.13",
        "@vitejs/plugin-react": "^5.1.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.560.0",
        "next-themes": "^0.4.6",
        "radix-ui": "^1.4.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "sonner": "^2.0.7",
        "tailwind-merge": "^3.4.0"
      },
      "tanstack": {
        "@tanstack/react-form": "^1.27.2",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/react-query-devtools": "^5.91.1",
        "@tanstack/react-router": "^1.141.0",
        "@tanstack/react-router-devtools": "^1.141.0",
        "@tanstack/router-plugin": "^1.141.0"
      },
      "build": {
        "@tailwindcss/vite": "^4.1.17",
        "tailwindcss": "^4.1.17",
        "vite": "^7.2.7"
      }
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:static": "turbo -F static dev",
    "deploy": "turbo deploy --ui=stream",
    "deploy:web": "turbo -F web deploy",
    "deploy:server": "turbo -F server deploy",
    "deploy:static": "turbo -F static deploy",
    "destroy": "turbo destroy --ui=stream",
    "destroy:web": "turbo -F web destroy",
    "destroy:server": "turbo -F server destroy",
    "destroy:static": "turbo -F static destroy",
    "db:generate": "turbo -F @pagehaven/db db:generate",
    "db:push": "turbo -F @pagehaven/db db:push",
    "db:studio": "turbo -F @pagehaven/db db:studio",
    "gh:env:sync": "turbo --ui=stream -F @pagehaven/scripts gh-env-sync --",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo -F @pagehaven/test test:e2e",
    "test:e2e:ui": "turbo -F @pagehaven/test test:e2e:ui",
    "cpd": "jscpd .",
    "sonar:up": "docker compose -f docker-compose.sonar.yml up -d",
    "sonar:down": "docker compose -f docker-compose.sonar.yml down",
    "sonar": "dotenv -- sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.token=${SONAR_TOKEN}"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/workers-types": "catalog:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:testing",
    "alchemy": "catalog:",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.7",
    "sonar-scanner": "^3.1.0",
    "turbo": "^2.6.3",
    "ultracite": "6.3.8",
    "vitest": "catalog:testing",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.4"
}

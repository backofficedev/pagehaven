{
  "name": "pagehaven",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.4.0",
      "dotenv": "^17.2.2",
      "alchemy": "^0.77.0",
      "@orpc/client": "^1.10.0",
      "@libsql/client": "^0.14.0",
      "libsql": "^0.5.22",
      "drizzle-orm": "^0.44.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "deploy": "turbo deploy --ui=stream",
    "deploy:web": "turbo -F web deploy",
    "deploy:server": "turbo -F server deploy",
    "destroy": "turbo destroy --ui=stream",
    "destroy:web": "turbo -F web destroy",
    "destroy:server": "turbo -F server destroy",
    "db:generate": "turbo -F @pagehaven/db db:generate",
    "db:push": "turbo -F @pagehaven/db db:push",
    "db:studio": "turbo -F @pagehaven/db db:studio"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@types/node": "^22.19.1",
    "alchemy": "^0.78.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.1",
    "ultracite": "6.3.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}

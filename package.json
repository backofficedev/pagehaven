{
  "name": "pagehaven",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.10.7",
      "@cloudflare/workers-types": "^4.20251202.0",
      "@orpc/client": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.4",
      "dotenv": "^17.2.3",
      "alchemy": "^0.79.0",
      "drizzle-orm": "^0.44.7"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:static": "turbo -F static dev",
    "deploy": "turbo deploy --ui=stream",
    "deploy:web": "turbo -F web deploy",
    "deploy:server": "turbo -F server deploy",
    "deploy:static": "turbo -F static deploy",
    "destroy": "turbo destroy --ui=stream",
    "destroy:web": "turbo -F web destroy",
    "destroy:server": "turbo -F server destroy",
    "destroy:static": "turbo -F static destroy",
    "db:generate": "turbo -F @pagehaven/db db:generate",
    "db:push": "turbo -F @pagehaven/db db:push",
    "db:studio": "turbo -F @pagehaven/db db:studio",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "cpd": "jscpd ./apps ./packages",
    "sonar:up": "docker compose -f docker-compose.sonar.yml up -d",
    "sonar:down": "docker compose -f docker-compose.sonar.yml down",
    "sonar": "dotenv -- sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.token=$SONAR_TOKEN"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/workers-types": "^4.20251202.0",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.15",
    "alchemy": "^0.79.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.7",
    "sonar-scanner": "^3.1.0",
    "turbo": "^2.6.2",
    "ultracite": "6.3.8",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.3"
}

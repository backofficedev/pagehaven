{
  "name": "@pagehaven/cli",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "bin": {
    "pagehaven": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev:local": "bun run ./src/index.ts",
    "check-types": "tsc --noEmit --skipLibCheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@pagehaven/client": "workspace:*",
    "@pagehaven/utils": "workspace:*",
    "chalk": "catalog:",
    "commander": "catalog:",
    "glob": "catalog:",
    "ora": "catalog:",
    "yaml": "catalog:"
  },
  "devDependencies": {
    "@pagehaven/config": "workspace:*",
    "@types/node": "catalog:",
    "vitest": "catalog:testing"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  }
}

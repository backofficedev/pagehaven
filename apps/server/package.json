{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    "./alchemy": {
      "bun": "./alchemy.run.ts",
      "types": "./alchemy.run.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "start": "bun run dist/index.js",
    "dev": "env-cli -- alchemy dev --app SERVER_APP_NAME",
    "dev:ready": "wait-on tcp:3000",
    "deploy": "env-cli -- alchemy deploy --app SERVER_APP_NAME",
    "destroy": "env-cli -- alchemy destroy --app SERVER_APP_NAME"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@pagehaven/api": "workspace:*",
    "@pagehaven/auth": "workspace:*",
    "@pagehaven/infra": "workspace:*",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@pagehaven/config": "workspace:*",
    "@types/node": "catalog:",
    "alchemy": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "wrangler": "catalog:"
  }
}

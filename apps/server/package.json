{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    "./alchemy": {
      "bun": "./alchemy.run.ts",
      "types": "./alchemy.run.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "start": "bun run dist/index.js",
    "dev": "alchemy dev --app server",
    "deploy": "alchemy deploy --app server",
    "destroy": "alchemy destroy --app server"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@pagehaven/api": "workspace:*",
    "@pagehaven/auth": "workspace:*",
    "@pagehaven/infra": "workspace:*",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@pagehaven/config": "workspace:*",
    "@types/node": "^22.19.1",
    "alchemy": "catalog:",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.52.1"
  }
}

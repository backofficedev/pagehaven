{
  "name": "@pagehaven/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./lib/access-control": {
      "default": "./src/lib/access-control.ts"
    },
    "./lib/access-utils": {
      "default": "./src/lib/access-utils.ts"
    },
    "./lib/serve-static": {
      "default": "./src/lib/serve-static.ts"
    },
    "./lib/github-webhook": {
      "default": "./src/lib/github-webhook.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "check-types": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@orpc/server": "catalog:",
    "@pagehaven/auth": "workspace:*",
    "@pagehaven/db": "workspace:*",
    "@pagehaven/utils": "workspace:*",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@pagehaven/config": "workspace:*",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}

{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/coverage",
      "!**/report",
      "!**/.scannerwork",
      "!**/migrations",
      "!**/test-results"
    ]
  },
  "extends": ["ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "warn"
      },
      "style": {
        "useSingleVarDeclarator": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["apps/cli/**/*", "**/alchemy.run.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
